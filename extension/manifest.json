{
  "manifest_version": 2,

  "name": "scrolr",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "background"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "plugins": [
    { "path": "npScrolrPlugin.so", "public": true }
  ]
}