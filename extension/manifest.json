{
  "manifest_version": 2,

  "name": "scrolr",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "activeTab",
    "background"
  ],

  "browser_action": {
    "default_icon": "icon-32.png"
  },

  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "128": "icon-128.png"
  },

  "background": {
    "page": "background.html"
  },

  "plugins": [
    { "path": "npScrolrPlugin.so", "public": true }
  ]
}
