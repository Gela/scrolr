{
  "manifest_version": 2,

  "name": "scrolr",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "http://www.google.com/*",
    "https://www.google.com/*",
    //"https://*",
    "activeTab",
    "background"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "page": "background.html"
  },

  "plugins": [
    { "path": "npScrolrPlugin.so", "public": true }
  ]
}
